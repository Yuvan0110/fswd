                    <label for="postText">Write a new post:</label>                             
                    <textarea id="postText" rows="2" cols="50" required></textarea><br> 
                    <label for="imageURL">Image URL (optional):</label>                 
                    <input type="text" id="imageURL">                           
                    <button type="button" onclick="addPost()">Post</button>
                </center>
            </form>
        </div>
        <div id="posts"></div>
    </main>
    <script>
        function addPost() {
            var postText = document.getElementById("postText").value;
            var imageURL = document.getElementById("imageURL").value;

            if (postText.trim() === "") {
                alert("Please enter some text for your post.");
                return;
            }
            var postContainer = document.getElementById("posts");
            var postDiv = document.createElement("div");
            postDiv.className = "post";
            var postContent = document.createElement("p");
            postContent.textContent = postText;
            postDiv.appendChild(postContent);
            if (imageURL.trim() !== "") {
                var postImage = document.createElement("img");
                postImage.src = imageURL;
                postDiv.appendChild(postImage);
            }
            postContainer.appendChild(postDiv);
            // Clear the form
            document.getElementById("postForm").reset();
        }
        function toggleFollow(userId) {
            const followButton = document.getElementById(`followButton${userId}`);
            if (followButton.innerText === 'Follow') {
                followButton.innerText = 'Unfollow';
            } else {
                followButton.innerText = 'Follow';
            }
        }
    </script>
